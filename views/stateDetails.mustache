<form action = '/state-details' method = 'POST'> 
<input placeholder = 'Enter City' name = 'city'>
<input placeholder = 'Enter State Code' name = 'state'>
<select name = 'locationType'>
  <option value="Parks">Parks</option>
  <option value="Places">Places</option>
</select>
<button type = 'submit'>Search Or some shit</button>
</form>
<form method = 'GET' action = '/favorites'>
<button type = 'submit' formaction = '/favorites'>View Your Favorites</button>
</form>
<h1>{{message}}</h1>

<ul>
    {{#results}}
        <li><h1>{{name}}{{title}}</h1>
        <p>{{description}}</p>
        <p>{{weatherInfo}}</p>
        <p>{{listingdescription}}</p>
        {{#listingImage}}
        <img style = 'width:400px' src = {{listingImage}}>
        {{/listingImage}}
        <form action = '/add-favorite' method = 'POST'>
            <input type = 'hidden' name = 'userId' value = '123456'> 
            <input type = 'hidden' name = 'parkcode' value = '{{parkCode}}'>
            <input type = 'hidden' name = 'locationType' value = '{{locationType}}'>
            <input type = 'hidden' name = 'placeTitle' value = '{{title}}'>
            <button formaction = '/add-favorite' type = 'submit'>Add selection to your favorites</button>
        </form>
        {{#parkInfo}}
        <form action = '/campground-info' method = 'POST'>
            <input type = 'hidden' name = 'parkCode' value = '{{parkCode}}'>
            <input type = 'hidden' name = 'parkName' value = '{{parkName}}'>
            <button formaction = '/campground-info' type = 'submit'>Click here to view available campgrounds!</button>
        </form>
        {{/parkInfo}}
        </li>
    {{/results}}
</ul>

</body>
