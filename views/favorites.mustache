<body>
    {{> menuBar}}
    <h1>Your Favorite Parks and Places :)</h1>
    <form method = 'post' action = '/search-redirect'>
    <button type = 'submit'>Search for more places!</button>
    </form>
    <h2>{{message}}</h2>
    <ul>
{{#parkList}}
        <li>
        <h1>{{fullName}}{{title}}</h1>
        <p>{{description}}</p>
        <p>{{listingdescription}}</p>
        {{#listingimage}}
        <img style = 'width:400px' src = {{listingimage.url}}>
        {{/listingimage}}
        <form action = '/delete-favorite' method = 'POST'>
            <input name = 'parkCode' value = '{{parkCode}}' type = 'hidden'>
            <input name = 'fullName' value = '{{fullName}}' type = 'hidden'>
            <input name = 'title' type = 'hidden' value = '{{title}}'>
            <button type = 'submit' formaction = '/delete-favorite'>Delete Item</button>
        </form> 
        </li>
    {{/parkList}}

</body>
